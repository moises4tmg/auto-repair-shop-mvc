<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oficina</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow"> <!--mb-3-->
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Funcionario" asp-action="Index">Oficina</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Funcionario" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Sobre</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-inside">
        <main role="main">
            <nav class="menu" tabindex="0">
	            <div class="smartphone-menu-trigger"></div>
                <header class="avatar">
		            <img src="~/img/avatar-icon-example.png" />
                    <h2>@ViewBag.FuncionarioNome</h2>
                </header>
	            <ul>
                    <a asp-controller="Ordens" asp-action="Index"><li tabindex="0" class="icon"><span>Ordens de serviço</span></li></a>
                    <a asp-controller="Ordens" asp-action="Create"><li tabindex="0" class="icon"><span>Nova Ordem de Serviço</span></li></a>
                    <a asp-controller="Clientes" asp-action="Index"><li tabindex="0" class="icon"><span>Listar Clientes</span></li></a>
                    <a asp-controller="Clientes" asp-action="Create"><li tabindex="0" class="icon"><span>Cadastrar Cliente</span></li></a>
                    <a asp-controller="Funcionario" asp-action="List"><li tabindex="0" class="icon"><span>Listar Funcionarios</span></li></a>
                    <a asp-controller="Funcionario" asp-action="Create"><li tabindex="0" class="icon"><span>Cadastrar Funcionario</span></li></a>
                    <a asp-controller="Funcionario" asp-action="Logout"><li tabindex="0" class="icon"><span>Sair</span></li></a>
                </ul>
            </nav>
            <div class="content">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align: left;">
            &copy; 2021 - Oficina - <a asp-area="" asp-controller="Home" asp-action="Privacy">Sobre</a>
        </div>
    </footer>
    <script src="~/js/cleavejs/cleave.js"></script>
    <script src="~/js/cleavejs/cleave-phone.br.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/less@4.1.1"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
